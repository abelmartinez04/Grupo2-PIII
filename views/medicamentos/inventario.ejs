<%- include("../partials/header") %>

<main class="flex-grow-1 d-flex align-items-center justify-content-center bg-light">

  <div class="container py-4">
    <section class="mb-4">
      <h3>Nuevo medicamento</h3>
      <form id="medicamento-form" class="row g-2">
        <input type="hidden" name="id" id="medicamento-id" />
        <div class="col-md-4">
          <input name="nombre" id="medicamento-nombre" class="form-control" placeholder="Nombre" required />
        </div>
        <div class="col-md-4">
          <input name="nombre_generico" id="medicamento-nombre-generico" class="form-control" placeholder="Nombre genérico" />
        </div>
        <div class="col-md-2">
          <input name="precio_compra" id="medicamento-precio-compra" type="number" step="0.01" class="form-control" placeholder="Precio compra" required />
        </div>
        <div class="col-md-2">
          <input name="precio_venta" id="medicamento-precio-venta" type="number" step="0.01" class="form-control" placeholder="Precio venta" required />
        </div>
        <div class="col-12">
          <button class="btn btn-primary mt-2" id="medicamento-submit" type="submit">Crear</button>
          <button class="btn btn-secondary mt-2 d-none" id="medicamento-cancel" type="button">Cancelar</button>
        </div>
      </form>
    </section>

    <section>
      <h3>Lista</h3>
      <div class="table-responsive">
        <table id="medicamentos-table" class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Genérico</th>
              <th>Precio</th>
              <th>Stock mínimo</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <!-- rellenado por JS -->
          </tbody>
        </table>
      </div>
    </section>
  </div>
</main>

<%- include("../partials/footer") %>

<script src="/js/medicamentos.js"></script>
