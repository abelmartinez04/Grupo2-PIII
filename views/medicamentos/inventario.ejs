<%- include("../partials/header") %>

<main class="flex-grow-1 bg-light">
  <div class="container py-4">
    <section class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="m-0">Inventario de Medicamentos</h3>
      <div class="d-flex gap-2">
        <a href="/medicamentos/categorias" class="btn btn-info">
          <i class="bi bi-tags"></i> Categorías
        </a>
        <a href="/medicamentos/proveedores" class="btn btn-warning">
          <i class="bi bi-truck"></i> Proveedores
        </a>
        <button id="btn-nuevo" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Nuevo medicamento
        </button>
      </div>
    </section>

    <section>
      <div class="table-responsive shadow-sm rounded bg-white p-3">
        <table id="medicamentos-table" class="table table-hover align-middle">
          <thead class="table-primary">
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Genérico</th>
              <th>Categoría</th>
              <th>Stock total</th>
              <th>Estado</th>
              <th>Precio venta</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </section>
  </div>
</main>

<%- include("../partials/footer") %>
